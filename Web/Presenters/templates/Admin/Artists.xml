{extends "@layout.xml"}

{block title}
    Исполнители
{/block}

{block heading}
    Исполнители
{/block}

{block headingWrap}
    Исполнители
{/block}

{block content}
    <div class="adminHeader" style="display:flex;align-items:center;justify-content:space-between;gap:10px;margin-bottom:12px;">
        <form method="get" action="/admin/artists" style="display:flex;gap:8px;align-items:center;">
            <input type="text" name="q" value="{$q}" placeholder="Поиск по имени" />
            <button type="submit">Искать</button>
        </form>
        <div>
            <a href="/admin/artist0" class="button">Создать исполнителя</a>
        </div>
    </div>

    <div class="content_list">
        <table class="table">
            <thead>
                <tr>
                    <th style="width:80px;">ID</th>
                    <th>Имя</th>
                    <th style="width:160px;">Действия</th>
                </tr>
            </thead>
            <tbody>
                <tr n:foreach="$artists as $row">
                    <td>{$row->id}</td>
                    <td>{$row->name}</td>
                    <td>
                        <a href="/artist{$row->id}" target="_blank">Открыть</a>
                        &nbsp;|&nbsp;
                        <a href="/admin/artist{$row->id}">Редактировать</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{/block}

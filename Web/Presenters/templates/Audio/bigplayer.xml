<div n:class="bigPlayer, ctx_place, $tidy ? tidy" style="width:102%;box-sizing:border-box;height:50%;">
    <div class="bigPlayerWrapper" style="display:flex;gap:10px;align-items:center;width:100%;min-height:64px;padding:8px 10px;box-sizing:border-box;overflow:hidden;">
        <!-- Left cover -->
        <div class="bigPlayerCover" style="flex:0 0 56px;width:56px;height:56px;border-radius:10px;overflow:hidden;background:#0b1220;border:1px solid rgba(255,255,255,0.08);">
            <img id="bigPlayerCover" src="/themepack/mobile_ovk/0.0.1.0/resource/icons/note.svg" alt="cover" style="width:100%;height:100%;object-fit:cover;display:block;" />
        </div>

        <!-- Right content -->
        <div style="display:flex;flex:1;gap:12px;align-items:center;min-width:0;">
            <div class="playButtons" style="flex:0 0 auto;display:flex;align-items:center;gap:8px;">
                <div class="playButton musicIcon" data-tip='simple' data-title="{_play_tip} [Space]"></div>
                <div class="arrowsButtons" style="display:flex;gap:6px;">
                    <div class="backButton musicIcon" data-tip='simple' data-title=""></div>
                    <div class="nextButton musicIcon" data-tip='simple' data-title=""></div>
                </div>
            </div>

            <div class="trackPanel" style="flex:1;min-width:0;">
                <div class="trackInfo" style="display:flex;align-items:center;justify-content:space-between;gap:10px;">
                    <div class="trackName" style="min-width:0;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;">
                        <span class="trackPerformers" style="font-weight:700;">
                            <a>{_track_unknown}</a>
                        </span>
                        <span> â€” </span>
                        <span>{_track_noname}</span>
                    </div>
                    <div class="timer" style="flex:0 0 auto;opacity:.85;">
                        <span class="time">00:00</span>
                        <span>/</span>
                        <span class="elapsedTime">-00:00</span>
                    </div>
                </div>

                <div class="track" style="margin-top:6px;">
                    <div class="selectableTrack">
                        <div id='bigPlayerLengthSliderWrapper' style="width:100%">&nbsp;
                            <div class="slider"></div>
                        </div>
                        <div class='selectableTrackLoadProgress'>
                            <div class="load_bar"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="volumePanel" style="flex:0 0 120px;min-width:100px;">
                <div class="volumePanelTrack">
                    <div class="selectableTrack">
                        <div id='bigPlayerVolumeSliderWrapper' style="width:100%">&nbsp;
                            <div class="slider"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="additionalButtons" style="flex:0 0 auto;display:flex;gap:6px;">
                <div class="repeatButton musicIcon" data-tip='simple' data-title="{_repeat_tip} [R]" ></div>
                <div class="shuffleButton musicIcon" data-tip='simple' data-title="{_shuffle_tip}"></div>
                <div class="deviceButton musicIcon" data-tip='simple' data-title="{_mute_tip} [M]"></div>
            </div>

            <div class="absoluteButtons" style="flex:0 0 auto;">
                <div n:if="$buttonsShow_summary" id="summarySwitchButton">-</div>
            </div>
        </div>
    </div>
</div>
